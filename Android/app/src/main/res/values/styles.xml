<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@color/colorDarkBlue</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
       <!-- <item name="android:statusBarColor">@android:color/transparent</item>-->
    </style>



    <style name="DateDialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/colorOrange</item>
        <item name="colorPrimary">@color/colorYellow</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
    </style>

    <style name="TextLabel" parent="TextAppearance.AppCompat">
        <!-- Hint color and label color in FALSE state -->
        <item name="android:textColorHint">@color/colorDarkBlue</item>
        <item name="android:textSize">20sp</item>
        <!-- Label color in TRUE state and bar color FALSE and TRUE State -->
        <item name="colorAccent">@color/colorDarkBlue</item>
        <item name="colorControlNormal">@color/colorDarkBlue</item>
        <item name="colorControlActivated">@color/colorDarkBlue</item>
    </style>

</resources>
